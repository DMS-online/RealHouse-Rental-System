        <class>ted.rental.database.entities.FileEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://database_host_here/rental?useUnicode=yes&amp;characterEncoding=UTF-8"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="rental"/>
            <property name="javax.persistence.jdbc.password" value="rental"/>
            <property name="eclipselink.jdbc.url"
                      value="jdbc:mysql://database_host_here:3306/rental?useUnicode=yes&amp;characterEncoding=UTF-8"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>

            <!--<property name="eclipselink.ddl-generation" value="create-tables"/>-->
